<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">

    <Properties>
        <Property name="LOG_PATTERN">%d{HH:mm:ss.SSS} [%t] %-5p %c - %m%n</Property>
    </Properties>

    <Appenders>
        <Console name="console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <Routing name="myAppender">
            <Routes pattern="${ctx:logFileName}">
                <Route>
                    <File fileName="build/logs/${ctx:logFileName}.log" name="myAppender-${ctx:logFileName}">
                        <PatternLayout pattern="${LOG_PATTERN}"/>
                    </File>
                </Route>
            </Routes>
        </Routing>

        <Async name="async" ignoreExceptions="false">
            <AppenderRef ref="myAppender" level="info"/>
        </Async>

    </Appenders>

    <Loggers>
        <Root level="info">
            <appender-ref ref="console"/>
            <appender-ref ref="async" />
        </Root>
    </Loggers>

</Configuration>